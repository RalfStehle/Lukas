<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="4px"
    app:contentPadding="10pt">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1pt"
            android:layout_marginBottom="2pt"
            android:weightSum="3">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/NameContent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Name"
                android:textSize="20sp" />

        </TableRow>

        <TableRow android:weightSum="3"
            android:layout_marginLeft="1pt">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Battery" />

            <TextView
                android:id="@+id/BatteryContent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Connected" />

        </TableRow>

        <TableRow android:weightSum="3"
            android:layout_marginLeft="1pt">

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Connected" />

            <TextView
                android:id="@+id/ConnectedContent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Battery" />

        </TableRow>

        <TableRow
            android:layout_marginTop="4pt"
            android:weightSum="12">

            <ImageButton
                android:id="@+id/SlowerButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:backgroundTint="#03A9F4"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4pt"
                android:layout_marginRight="4pt"
                android:layout_weight="2"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/StopButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F44336"
                    android:src="@drawable/ic_outline_stop_24" />

                <ImageButton
                    android:id="@+id/LightButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2pt"
                    android:backgroundTint="#FFC107"
                    android:src="@drawable/ic_outline_lightbulb_24" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/FasterButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:backgroundTint="#03A9F4"
                android:src="@drawable/ic_baseline_arrow_forward_24" />
        </TableRow>
    </TableLayout>

</androidx.cardview.widget.CardView>